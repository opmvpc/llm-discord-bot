{
  "name": "llm-discord-bot",
  "version": "1.0.0",
  "description": "discord bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently --retry-forever -n tsc,bot \"tsc -w\" \"node ./watcher.mjs ./dist/index.js\"",
    "preview": "tsc --build && node dist/index.js",
    "serve": "tsc --build && pm2 start ecosystem.config.js --env production",
    "generate": "concurrently --retry-forever -n tsc,generator \"tsc -w\" \"node ./watcher.mjs ./dist/Persona/personasGenerator.js\""
  },
  "author": "opmvpc",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1",
    "langchain": "^0.0.175",
    "replicate": "^0.18.1",
    "unstorage": "^1.9.0"
  },
  "devDependencies": {
    "child_process": "^1.0.2",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "typescript": "^5.2.2"
  }
}
